{
  "name": "ai-tutor-challenge-node",
  "version": "1.0.0",
  "main": "dist/server/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc && yarn copy-static-files",
    "copy-static-files": "cp -r src/server/public dist/server/",
    "start:server": "node dist/server/index.js",
    "start:client": "node dist/client/index.js",
    "start": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\" \"yarn start:server\" \"sleep 2 && yarn start:client\"",
    "dev:server": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server/index.ts",
    "dev:client": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/client/index.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "nodemon": "^3.1.10",
    "pino": "^9.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.0.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4"
  }
}
